<?xml version="1.0" encoding="utf-8"?>
<!--This is the same as the fragment_home_screen.xml file, except that it controls how the HomeScreenFragment
    looks in landscape mode.-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenFragment">


    <fragment
        android:id="@+id/homeBackgroundFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.video_game_final_project.BackgroundFragment"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="top|center"
            android:fontFamily="@font/multicolor"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="19dp"
            android:text="Welcome to\n Sky Cat Video Game Searcher App!" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="28dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:fontFamily="@font/caviarbi"
            android:text="Written by Skyler Brivic &amp; Cat Mai" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/tutorialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:text="Getting Started" />


                <Button
                    android:id="@+id/platformsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/console"
                    android:drawablePadding="10dp"
                    android:text="Add Your Consoles" />

                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/viewprofile"
                    android:drawablePadding="10dp"
                    android:text="View Profile" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/reccomendedGamesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/reccomend"
                    android:drawablePadding="10dp"
                    android:text="Reccomended Games" />

                <Button
                    android:id="@+id/generalSearchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/gensearch"
                    android:drawablePadding="10dp"
                    android:text="General Search" />

                <Button
                    android:id="@+id/randomButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/feellucky"
                    android:drawablePadding="10dp"
                    android:text="I'm Feeling Lucky!" />

            </TableRow>



        </TableLayout>

    </LinearLayout>

</FrameLayout>