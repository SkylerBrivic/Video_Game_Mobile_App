<?xml version="1.0" encoding="utf-8"?>

<!--This is the layout used to show previews of games in various recycler views.
    This includes the profile screen for the user and the game search screen.-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="200dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/beige">

        <ImageView
            android:id="@+id/gamePreviewImage"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/releaseDatePreview"
            android:layout_width="match_parent"
            android:textSize="8dp"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="releaseDate"/>

        <TextView
            android:id="@+id/namePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:text="gameName"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>

